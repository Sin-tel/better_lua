// basic syntax examples
fn main() {
	let list = [2 3 4 5]

	for i in list {
		print(i, fact(i))
	}

	let i = 4
	while true {
		print(i, fact(i))
		i -= 1
		if i <= 0 break
	}

	let add = fn(a: int, b: int) {return a + b}
	print(add(1, 2))
}

// defining a function
fn fact(n: int) -> int {
	assert(n >= 0)
	if n != 0 return n * fact(n - 1)
	else return 1
}


